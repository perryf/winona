<% @movie.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_for @movie do |f| %>
  <div class="">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %>
  </div>

  <div class="">
    <%= f.label :release_date, "Release Date:" %>
    <%#= f.date_select :release_date, start_year: 1889 %>
    <%= f.text_field :release_date, placeholder: 'YYYY/MM/DD' %>
  </div>

  <div class="">
    <%= f.label :director, "Director:" %>
    <%= f.text_field :director %>
  </div>

  <div class="">
    <%= f.label :overview, "Overview:" %>
    <%= f.text_area :overview %>
  </div>

  <div class="">
    <%= f.label :poster_url, "Poster URL:" %>
    <%= f.text_field :poster_url %>
  </div>

  <div class="">
    <%= f.label :list_ids, "Add to list:" %>
    <%= f.collection_check_boxes :list_ids, current_user.lists.all, :id, :name, {:item_wrapper_class => 'checkbox_container'} do |b|%>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="">
    <%= f.submit 'Submit', :class => 'btn' %>
  </div>
<% end %>
