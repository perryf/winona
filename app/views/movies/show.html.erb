<h2><%= @movie.title %> <%= link_to "(+) Add to List", new_movie_group_path(@movie) %> <%= link_to "(Edit)", edit_movie_path(@movie) %> <%= link_to "(Delete)", movie_path(@movie), method: :delete %></h2>

<%= image_tag @movie.poster_url, alt: "Movie Poster for #{@movie.title}", class: "movie-poster" %>
<h3>Release Date: <%= @movie.release_date.strftime("%B %e,%Y") %></h3>
<h3>Director: <%= @movie.director %></h3>
<h3>Overview:</h3>
<p><%= @movie.overview %></p>
<p>
  On Your Lists:
  <ul>
    <% @movie.lists.each do |list| %>
      <li><%= list.name %></li>
    <% end %>
  </ul>
</p>

<div class="go-back">
  <%= link_to "Go Back", :back %>
</div>
