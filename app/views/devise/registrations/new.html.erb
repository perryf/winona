<section class="form-container">
  <header>
    <h2>Sign Up</h2>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-section">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-field" %>
    </div>

    <div class="form-section">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-field" %>
    </div>

    <div class="form-section">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-field" %>
    </div>

    <div class="actions form-section form-submit-btn">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
